@page
@model Ice_Cream.Pages.UserModel

<environment>
    <link rel="stylesheet" href="/css/user.css" />
</environment>


<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 information">
            <form method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" asp-for="customer.CustomerName" />
                </div>
                <div class="form-group">
                    <label for="birth">Birthday:</label>
                    <input type="date" class="form-control" asp-for="customer.Birthday" />
                </div>
                <div class="form-group">
                    <label for="address">Address:</label>
                    <input type="text" class="form-control" asp-for="customer.Address" />
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" asp-for="customer.Email" />
                </div>
                <div class="form-group">
                    <label for="pwd">Phone:</label>
                    <input type="text" class="form-control" asp-for="customer.Phone" />
                </div>
                <div class="submit">
                    <input type="submit" class="btn btn-danger btn-md" value="Save" />
                </div>
            </form>
        </div>
        <div class="col-3"></div>
    </div>
</div>